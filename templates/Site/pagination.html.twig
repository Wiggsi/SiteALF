{% if pagination.pages_count > 1 %}
    <nav class="col-12">
        <ul class="pagination pagination-sm justify-content-left">
            {% if pagination.page > 1 %}
                {% if pagination.page > 2 %}
                    <li class="page-item"><a href="{{ path(pagination.route, pagination.route_params|merge({'page': 1})) }}"
                                             class="page-link"><<</a></li>
                {% endif %}
                <li class="page-item"><a
                            href="{{ path(pagination.route, pagination.route_params|merge({'page': pagination.page - 1})) }}"
                            class="page-link"><</a></li>
            {% endif %}
            {% for p in range(max(pagination.page - 4, 1),
                min(pagination.page+4, pagination.pages_count)) %}
                <li class="page-item{% if p == pagination.page %} active{% endif %}">
                    <a href="{{ path(pagination.route, pagination.route_params|merge({'page': p})) }}" class="page-link">{{ p }}</a>
                </li>
            {% endfor %}
            {% if pagination.page < pagination.pages_count %}
                <li><a href="{{ path(pagination.route, pagination.route_params|merge({'page': pagination.page + 1})) }}"
                       class="page-link">
                        ></a></li>
                {% if pagination.page != pagination.pages_count - 1 %}
                    <li><a href="{{ path(pagination.route, pagination.route_params|merge({'page': pagination.pages_count})) }}"
                           class="page-link">
                            >></a></li>
                {% endif %}
            {% endif %}
        </ul>
    </nav>
{% endif %}