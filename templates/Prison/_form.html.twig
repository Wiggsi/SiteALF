{{ form_start(form) }}
<div class="row">
    <div class="col-md-6">
        {{ form_errors(form) }}
        {% if app.user.isGendarme or app.user.magistrat %}
            {{ form_row(form.type) }}
            {{ form_row(form.enAttente) }}
            <div class="form-group" id="validationGroup">
                {{ form_label(form.validation) }}
                {{ form_widget(form.validation) }}
                {{ form_errors(form.validation) }}
            </div>
            {{ form_row(form.criminel) }}
            {{ form_row(form.PV) }}
        {% endif %}
        {{ form_row(form.startDate) }}
        {{ form_row(form.endDate) }}
        {{ form_row(form.save) }}
    </div>
    <div class="col-md-6" id="colContent">
        {{ form_row(form.comment) }}
    </div>
</div>
{{ form_end(form) }}
