<form method="post" action="{{ path('gd_post_delete', {'id': post.id}) }}"
      onsubmit="return confirm('Confirmer la suppression de ce post: ');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.id) }}">
    <button class="btn btn-outline-danger">
        <span class="oi oi-delete"></span> Supprimer
    </button>
</form>