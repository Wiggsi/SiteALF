{% extends 'base.html.twig' %}

{% block title %}
    Connexion
{% endblock %}
{% block pageTitre %}
    Connexion
{% endblock %}

{% block body %}
    <style>
        body {
            background-color: #071a30;
            background-image: url("{{ asset('img/background.jpg') }}");
            background-repeat: no-repeat;
            background-size: auto;
            background-position: top center;
            background-attachment: fixed;
            overflow: hidden;
        }

        #colorDiv, #pageTitre {
            color: white;
        }
    </style>
    <div class="row" id="colorDiv">
        <div class="col-sm-4">
            <form action="{{ path('security_login') }}" method="post" class="form-horizontal" role="form">
                {% if error %}
                    <div class="alert alert-danger">
                        {{ error.messageKey|trans }}
                    </div>
                {% endif %}
                <div class="form-group">
                    <label class="col-sm control-label" for="username">
                        <span class="oi oi-person"></span> Nom d'utilisateur</label>
                    <div class="col-sm">
                        <input type="text" class="form-control" id="username" name="_username"
                               placeholder="Prénom et Nom"/>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm control-label" for="password">
                        <span class="oi oi-key"></span> Mot de Passe</label>
                    <div class="col-sm">
                        <input type="password" class="form-control" id="password" name="_password"
                               placeholder="Mot de passe"/>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm">
                        <div class="checkbox">
                            <label for="remember_me">
                                <input type="checkbox" id="remember_me" name="_remember_me" checked/>
                                Rester connecté
                            </label>
                        </div>
                    </div>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                <button type="submit" class="btn btn-outline-success">
                    <span class="oi oi-account-login"></span> Connexion
                </button>
            </form>
        </div>
    </div>
{% endblock %}