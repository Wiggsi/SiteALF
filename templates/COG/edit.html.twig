{% extends 'base.html.twig' %}

{% block title %}Appel {{ appelCOG }} - Modification{% endblock %}
{% block pageTitle %}Centre d'Opérations de la Gendarmerie{% endblock %}

{% block body %}
    <h3>{{ appelCOG }} - Modification</h3>
    <div class="btn-group p-1">
        <a href="{{ path('gd_cog_show', {'id': appelCOG.id}) }}" class="btn btn-outline-secondary">
            <span class="oi oi-chevron-left"></span> Retour à l'appel</a>
        {% if app.user.gendarme == appelCOG.author or app.user.gendarme.isOfficier %}
            {{ include('COG/_delete_form.html.twig') }}
        {% endif %}
    </div>
    {{ include('COG/_form.html.twig') }}
{% endblock %}

{% block javascripts %}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.9/summernote-bs4.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.9/summernote-bs4.js"></script>
    <script>
        let bb = document.querySelector('#colContent').getBoundingClientRect();
        width = bb.right - bb.left;
        $(document).ready(function () {
            $('#appel_cog_content').summernote({
                height: screen.availHeight * 0.5,
                width: width * 0.9
            });
        });
    </script>
{% endblock %}