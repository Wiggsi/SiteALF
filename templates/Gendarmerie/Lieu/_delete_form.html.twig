<form method="post" action="{{ path('gd_carte_delete', {'id': lieu.id}) }}"
      onsubmit="return confirm('Confirmer la suppression du lieu :');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ lieu.id) }}">
    <button class="btn btn-outline-danger">
        <span class="oi oi-delete"></span> Supprimer
    </button>
</form>